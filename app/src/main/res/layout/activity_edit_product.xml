<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.example.android.inventoryapp.EditProduct">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:text="@string/name_editor"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/name_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/e_g_chocolates" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:text="@string/quantity"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/quantity_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/e_g_15"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:text="@string/price"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/price_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/e_g_5"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:text="@string/supplier"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/supplier_editable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/e_g_john_email_com"
                android:inputType="textEmailAddress" />


        </LinearLayout>

        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <Button
            android:id="@+id/shipment_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/received_shipment" />

        <Button
            android:id="@+id/track_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_a_sale" />

        <Button
            android:id="@+id/order_from_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_from_supplier" />

        <Button
            android:id="@+id/choose_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_image" />

        <Button
            android:id="@+id/delete_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_item" />

    </LinearLayout>
</ScrollView>